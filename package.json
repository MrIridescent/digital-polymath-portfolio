{
  "name": "digital-polymath-portfolio",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:turbo": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "analyze": "cross-env ANALYZE=true next build",
    "deploy": "npm run build && echo 'SSR build ready for Vercel/Netlify!'",
    "deploy:static": "next build && next export && echo 'Static files ready in ./out folder!'",
    "deploy:cpanel": "npm run build && echo 'Upload .next folder to cPanel with Node.js support'",
    "netlify": "npm run build && netlify deploy --prod",
    "netlify:preview": "npm run build && netlify deploy",
    "protect:content": "node scripts/applyContentProtection.js",
    "test:protection": "jest tests/contentProtection.test.js",
    "verify:protection": "npm run test:protection && echo '🛡️ All protection features verified!'"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tailwindcss/typography": "^0.5.16",
    "aos": "^2.3.4",
    "clsx": "^2.1.0",
    "d3": "^7.9.0",
    "framer-motion": "^11.0.0",
    "gsap": "^3.13.0",
    "lottie-web": "^5.13.0",
    "lucide-react": "^0.400.0",
    "matter-js": "^0.20.0",
    "next": "^15.4.2",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-lottie-player": "^2.1.0",
    "tailwind-merge": "^2.3.0",
    "three": "^0.178.0",
    "@next/bundle-analyzer": "^15.0.0"
  },
  "devDependencies": {
    "@netlify/plugin-nextjs": "^5.11.6",
    "@playwright/test": "^1.54.1",
    "@types/d3": "^7.4.3",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/three": "^0.178.1",
    "autoprefixer": "^10.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.0.0",
    "postcss": "^8.4.0",
    "prettier": "^3.2.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  }
